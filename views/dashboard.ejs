<div class="d-flex align-items-center mb-4">
  <div>
    <h3 class="fw-bold mb-0"><i class="fa-solid fa-calendar-days me-2"></i>Dashboard Tabungan</h3>
    <div class="text-muted small auto-checkin">Auto check-in ketika terima <code>.add &lt;nominal&gt;</code> (WIB)</div>
  </div>
  <div class="ms-auto" style="width: 220px;">
    <input type="month" id="ym" class="form-control input-soft">
  </div>
</div>

<div class="row g-3 mb-4">
  <div class="col-lg-4">
    <div class="card stat-card border-0 shadow-sm">
      <div class="card-body d-flex align-items-center">
        <div class="flex-grow-1">
          <div class="text-muted small">Total Bulan Ini</div>
          <h2 class="mb-0" id="monthTotal">Rp 0</h2>
        </div>
        <div class="stat-icon bg-ok">
          <i class="fa-solid fa-wallet"></i>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-8">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <h6 class="mb-3"><i class="fa-solid fa-chart-line me-2"></i>Grafik Mingguan (7 hari)</h6>
        <canvas id="weekChart" height="120"></canvas>
      </div>
    </div>
  </div>
</div>

<div class="card border-0 shadow-sm">
  <div class="card-body">
    <div class="d-flex align-items-center mb-3">
      <h6 class="mb-0"><i class="fa-solid fa-table-cells-large me-2"></i>Kalender Bulan Ini</h6>
      <div class="ms-auto small">
        <span class="badge text-bg-success"><i class="fa-solid fa-check"></i> Menabung</span>
        <span class="badge text-bg-danger"><i class="fa-solid fa-xmark"></i> Belum</span>
      </div>
    </div>
    <div id="calendar" class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-7 g-2"></div>
  </div>
</div>

<script src="/js/dashboard.js"></script>
